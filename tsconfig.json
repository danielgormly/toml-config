{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "checkJs": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": false,
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "src/main.mts"
  ],
  "include": [
    "test/**/*.spec.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
